{
  "name": "bff-admin",
  "version": "1.0.0",
  "description": "BFF de admin",
  "main": "dist/server.js",
  "repository": "https://bitbucket.org/versatushpc/bff-admin",
  "author": "ArcH Office",
  "license": "UNLICENSED",
  "scripts": {
    "dev": "ts-node-dev -r tsconfig-paths/register --files src/server.ts",
    "build": "rimraf dist && tsc -p tsconfig-build.json && tsc-alias -p tsconfig-build.json",
    "start": "npm run build && node dist/server.js",
    "test": "jest --passWithNoTests --detectOpenHandles --silent",
    "test:coverage": "jest --passWithNoTests --detectOpenHandles --coverage",
    "test:staged": "npm test --findRelatedTests",
    "test:watch": "npm test --watchAll",
    "test:unit": "npm test -c jest-unit-config.js",
    "test:integration": "npm test -c jest-integration-config.js",
    "test:unit:watch": "npm test --watchAll -c jest-unit-config.js",
    "test:integration:watch": "npm test --watchAll -c jest-integration-config.js",
    "test:verbose": "jest --passWithNoTests --detectOpenHandles",
    "test:watch:verbose": "npm test:verbose --watchAll",
    "test:unit:verbose": "npm test:verbose -c jest-unit-config.js",
    "test:integration:verbose": "npm test:verbose -c jest-integration-config.js",
    "test:unit:watch:verbose": "npm test:verbose --watchAll -c jest-unit-config.js",
    "test:integration:watch:verbose": "npm test:verbose --watchAll -c jest-integration-config.js",
    "sonar": "sonar-scanner",
    "lint": "eslint \"**/*.{ts,tsx}\" --fix"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/morgan": "^1.9.9",
    "@types/node": "^18.15.11",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "morgan": "^1.10.0",
    "prettier": "^3.3.3",
    "prettier-eslint": "^16.3.0",
    "sonarqube-scanner": "^3.3.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.5",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@archoffice/domain-infraestructure": "^1.6.3",
    "@types/joi": "^17.2.3",
    "amqplib": "^0.10.3",
    "axios": "^1.6.5",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.0",
    "versatus-arch-framework": "^1.13.0"
  }
}
